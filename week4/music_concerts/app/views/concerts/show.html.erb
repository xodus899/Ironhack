<h3> <em> Concert Information </em> </h3>

<ul style = " list-style :square ">
	<li> 
		$<%= @one_concert.price %><br>
	</li>

	<li>
		Artist:<%= @one_concert.artist %><br>
	</li>

	<li>
		Venue:<%= @one_concert.venue %><br>
	</li>

	<li>
		Location:<%= @one_concert.city %><br>
	</li>

	<li>
		Date:<%= @one_concert.date.strftime("%B, %d, at %I:%M %p" ) %><br>
	</li>
	
	<li>
		Description:<%= @one_concert.description %><br>
	</li>
</ul>

<h5>Voice Opinions</h5>

	<% @concert_comment.each do |comment| %>

		<%= comment.name %>
		<%= comment.comment %>

	<% end %>


<h5> Leave a comment </h5>

<%= form_for [@one_concert, @new_content] do |the_comment| %>
	<%= the_comment.label :name %>
	<%= the_comment.text_field  :name , placeholder: " Name " %>
	<br>
	<%= the_comment.label :comment %>
	<%= the_comment.text_area :comment, placeholder:" Comment here " %>
	<%= the_comment.submit  "Voice your opinion" %>

<% end %>

