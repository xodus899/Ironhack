<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-poke-name">Feraligtr</span>
          <small class="js-poke-number" >#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd class="js-poke-height">23</dd>

          <dt>Weight</dt>
          <dd class="js-poke-weight">888</dd>
          
          <dt> HP </dt>
          <dd class= "js-poke-hp">59</dd>

          <dt> Attack </dt>
          <dd class= "js-poke-attack">45</dd>

          <dt> Defense </dt>
          <dd class= "js-poke-defense">50</dd

          <dt> Sp Attack </dt>
          <dd class= "js-poke-special-attack">25</dd>

          <dt> Sp Defense </dt>
          <dd class= "js-poke-special-defense">25</dd>

          <dt> Speed </dt>
          <dd class= "js-poke-speed">30</dd>

        </dl>
        

       

      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
