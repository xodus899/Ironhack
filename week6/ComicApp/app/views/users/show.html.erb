<% if current_user == @user %>

	<h4> Your Profile </h4>

<% else %>
		<h4> User Profile </h4>

<% end %>


<h4> <%= @user.name %> </h4>

<h5> Favorite Comics </h5>

	<ul> 
	<% @user.comics.each do |the_comic| %>
		<li>
			<h5> <%= the_comic.title %> </h5>
				<p><h6> Publisher: <%= the_comic.publisher %> <h6></p>
			</li>
		<% end %>
	</ul>